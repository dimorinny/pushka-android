<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_launcher_112dp"
            android:contentDescription="@string/description_logo_icon"
            />

        <TextView
            android:id="@+id/one_action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="248dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            />

        <TextView
            android:id="@+id/one_action_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="248dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/one_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:theme="@style/WhiteButtonStyle"
            />
    </LinearLayout>
</ScrollView>