<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryText"
        android:text="rkework wkeoprk pweokrp owepor pwekrpowkpokep rkework wkeoprk pweokrp owepor pwekrpowkpokep rkework wkeoprk pweokrp owepor pwekrpowkpokep owkpowk proewk wprkwep orkwper kpwoekr pwo"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_alert_source_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/login_background"
                />

            <TextView
                android:id="@+id/item_alert_source_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:textSize="14sp"
                android:text="Газета.ру"
                />

        </LinearLayout>
        
        <ImageView
            android:id="@+id/item_alert_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications_grey_24dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>