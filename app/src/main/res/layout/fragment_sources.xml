<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ru.nbsp.pushka.presentation.core.widget.AnimatedStateRecyclerView
        android:id="@+id/sources_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/list_layout_animation"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />

    <include
        android:id="@+id/empty_placeholder"
        layout="@layout/empty_placeholder"/>

    <include
        android:id="@+id/error_placeholder"
        layout="@layout/error_placeholder"/>

    <include
        android:id="@+id/progress_placeholder"
        layout="@layout/progress_placeholder"/>

</FrameLayout>